        $("#strPageTitle").text("CMS User Profile | Colmart CMS");
        $("#h2PageHeader").text("CMS User Profile");

        //Update Breadcrumbs
        $("#olBreadcrumbs").append("<li><span>CMS User Profile</span></li>");

        @{
            //PROFILE UPDATE SUCCESS NOTIFICATION
            if (TempData["bIsCMSUserProfileUpdated"] != null)
            {
                if ((bool)TempData["bIsCMSUserProfileUpdated"] == true)
                {
                    <text>
                        updatedItemSuccess();
                    </text>
                }
            }
        }
    }
</script>

