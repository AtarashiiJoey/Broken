@model Colmart.View_Models.clsHomeCarousel

<div class="tab-pane active show fade" id="tab1" role="tabpanel">
    <div class="product-carousel-two owl-carousel carousel-style-one">
        @foreach (var tShirt in Model.lstTShirts)
        {
            <div class="custom-col">
                <div class="product-item">
                    <div class="product-image-hover">
                        <a href="@Url.Action("ProductDetails","Product",new {@iProductID = tShirt.iProductID })">
                            <img class="primary-image" src="@tShirt.strImageURL" onerror="this.src='../../images/not-found.jpg'" />
                            <img class="hover-image" src="@tShirt.strImageURL" onerror="this.src='../../images/not-found.jpg'" />
                        </a>
                        <div class="product-hover">
                            @if (ViewBag.Layout == "_ColmartLayout.cshtml")
                            {
                                <button onclick="addToCart(@tShirt.iProductID)"><i class="icon icon-FullShoppingCart"></i></button>
                            }
                            else
                            {
                                <button onclick="addToMyWishList(@tShirt.iProductID)"><i class="icon icon-Heart"></i></button>
                            }
                            <a href="wishlist.htnl"><i class="icon icon-Files"></i></a>
                        </div>
                    </div>
                    <div class="product-text">
                        <h4><a href="shop.html">@tShirt.strTitle</a></h4>
                        <p>@tShirt.strFullDescription</p>
                        @*<div class="product-price"><span>$34.00</span></div>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>
